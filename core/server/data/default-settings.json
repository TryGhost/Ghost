{
    "core": {
        "databaseVersion": {
            "defaultValue": "000"
        }
    },
    "blog": {
        "title": {
            "defaultValue": "Ghost"
        },
        "description": {
            "defaultValue": "Just a blogging platform."
        },
        "email": {
            "defaultValue": "ghost@example.com",
            "validations": {
                "notNull": true,
                "isEmail": true
            }
        },
        "logo": {
            "defaultValue": ""
        },
        "cover": {
            "defaultValue": ""
        },
        "defaultLang": {
            "defaultValue": "en_US",
            "validations": {
                "notNull": true
            }
        },
        "postsPerPage": {
            "defaultValue": "6",
            "validations": {
                "notNull": true,
                "isNumeric": true
            }
        },
        "forceI18n": {
            "defaultValue": "true",
            "validations": {
                "notNull": true,
                "isIn": ["true", "false"]
            }
        }
    },
    "theme": {
        "activePlugins": {
            "defaultValue": ""
        },
        "activeTheme": {
            "defaultValue": "casper"
        }
    },
    "plugin": {
        "installedPlugins": {
            "defaultValue": "[]"
        }
    }
}
