{
  "extends": [
    "@tryghost:base",
    "@tryghost:groupTestLint",
    "@tryghost:groupCSS",
    "@tryghost:groupBuildTools",
    "@tryghost:automergeSilentTestLintNonMajor"
  ],
  "travis": { "enabled": true },
  "node": {
    "supportPolicy": ["lts"]
