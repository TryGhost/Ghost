{
  "name": "@tryghost/e2e",
  "version": "0.0.0",
  "repository": "https://github.com/TryGhost/Ghost/tree/main/e2e",
  "author": "Ghost Foundation",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsc --watch --preserveWatchOutput --noEmit",
    "build": "yarn test:types",
    "build:ts": "tsc --noEmit",
    "prepare": "tsc --noEmit",
    "build:image": "docker compose -f ../compose.infra.yaml -f ../compose.dev.yaml build ghost-dev ghost-dev-gateway",
    "build:e2e-image": "docker build -f Dockerfile -t ghost-e2e-local ..",
    "infra:up": "docker compose -f ../compose.infra.yaml -f ../compose.analytics.yaml up -d --wait",
    "infra:down": "docker compose -f ../compose.infra.yaml -f ../compose.analytics.yaml down",
    "test": "playwright test --project=main",
    "test:analytics": "playwright test --project=analytics",
    "test:all": "playwright test --project=main --project=analytics",
    "test:single": "playwright test --project=main -g",
    "test:debug": "playwright test --project=main --headed --timeout=60000 -g",
    "test:build": "GHOST_E2E_MODE=build playwright test --project=main",
    "test:build:ci": "yarn build:e2e-image && yarn infra:up && GHOST_E2E_MODE=build playwright test --project=main; EXIT_CODE=$?; yarn infra:down; exit $EXIT_CODE",
    "test:build:registry": "GHOST_E2E_MODE=build GHOST_E2E_IMAGE=ghcr.io/tryghost/ghost-development:latest playwright test --project=main",
    "test:types": "tsc --noEmit",
    "lint": "eslint . --cache"
  },
  "files": [
    "build"
  ],
  "devDependencies": {
    "@eslint/js": "9.37.0",
    "@faker-js/faker": "8.4.1",
    "@playwright/test": "1.55.1",
    "@tryghost/debug": "0.1.35",
    "@tryghost/logging": "2.4.23",
    "@types/dockerode": "3.3.44",
    "typescript-eslint": "8.49.0",
    "c8": "10.1.3",
    "dockerode": "4.0.9",
    "dotenv": "16.6.1",
    "eslint-plugin-playwright": "2.5.0",
    "eslint-plugin-no-relative-import-paths": "^1.6.1",
    "knex": "3.1.0",
    "mysql2": "3.15.2",
    "ts-node": "10.9.2",
    "typescript": "5.8.3"
  },
  "dependencies": {}
}
