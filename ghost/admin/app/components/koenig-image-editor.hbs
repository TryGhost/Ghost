{{#if this.isEditorEnabled}}
    <GhUploader
        @onComplete={{this.onUploadComplete}}
        as |uploader|
    >
        <button
            type="button"
            class="{{if @className @className "image-action image-edit"}}"
            title="Edit image"
            {{on "click" (fn this.handleClick uploader)}}
        >
            {{svg-jar "pen"}}
        </button>
    </GhUploader>
{{/if}}
