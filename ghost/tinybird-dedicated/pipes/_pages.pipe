VERSION 2
NODE _pages_0
SQL >

    SELECT
        site_uuid,
        toDate(timestamp) AS date,
        post_uuid,
        device,
        browser,
        location,
        source,
        pathname,
        post_type,
        maxIfState(member_status, member_status IN ('paid', 'free', 'undefined')) AS member_status,
        uniqState(session_id) AS visits,
        countState() AS pageviews
    FROM _hits
    GROUP BY
        site_uuid,
        date,
        device,
        browser,
        location,
        source,
        pathname,
        post_uuid,
        post_type

TYPE materialized
DATASOURCE _pages_mv
