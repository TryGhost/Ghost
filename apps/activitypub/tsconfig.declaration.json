{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "noEmit": false,
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "./types",
        "emitDeclarationOnly": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
        "rootDir": "./src"
    },
    "include": ["src"],
    "exclude": ["src/**/*.stories.tsx", "src/**/*.test.ts", "src/**/*.test.tsx"]
}
  