{
  "name": "@tryghost/unsplash-selector",
  "version": "0.0.1",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/TryGhost/Ghost/tree/main/apps/unsplash-selector"
  },
  "types": "./types/index.d.ts",
  "author": "Ghost Foundation",
  "files": [
    "LICENSE",
    "README.md",
    "dist/"
  ],
  "main": "./dist/unsplash-selector.umd.js",
  "module": "./dist/unsplash-selector.js",
  "exports": {
    ".": {
      "import": "./dist/unsplash-selector.js",
      "require": "./dist/unsplash-selector.umd.js",
      "types": "./types/index.d.ts"
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "dev": "vite",
    "build": "concurrently \"vite build\" \"tsc -p tsconfig.declaration.json\"",
    "preview": "vite preview",
    "lint": "eslint src --ext .js,.ts,.jsx,.tsx --cache",
    "test": "vitest run"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-tailwindcss": "^3.14.3",
    "jsdom": "^24.0.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.4",
    "vite-plugin-css-injected-by-js": "^3.4.0",
    "vite-plugin-svgr": "^4.2.0",
    "vitest": "^1.3.1"
  },
  "nx": {
    "targets": {
      "dev": {
        "dependsOn": [
          "^build"
        ]
      },
      "test:unit": {
        "dependsOn": [
          "test:unit",
          "^build"
        ]
      }
    }
  }
}
