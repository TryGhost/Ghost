{
  "editor.quickSuggestions": {
    "strings": true
  },
  "eslint.workingDirectories": [
    {
      "pattern": "./apps/*/"
    },
    {
      "pattern": "./ghost/*/"
    }
  ],
  "search.exclude": {
    "**/*.js.snap": true,
    "**/.git": true,
    "**/build/*": true,
    "**/coverage/**": true,
    "**/dist/**": true,
    "**/ghost.map": true,
    "**/node_modules": true,
    "ghost/core/core/built/**": true
  },
  "tailwindCSS.experimental.classRegex": [
    ["clsx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],
  "git.detectSubmodules": false
}
