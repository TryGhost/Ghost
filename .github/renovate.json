{
    "extends": [
        "github>tryghost/renovate-config:quiet"
    ],
    "rebaseWhen": "never",
    "automergeSchedule": [
        "* 17-23 * * 5",
        "* * * * 0,6,",
        "* 0-12 * * 1"
    ],
    "ignoreDeps": [
        "got",
        "intl-messageformat",
        "moment",
        "moment-timezone",
        "simple-dom",
        "ember-drag-drop",
        "@embroider/macros",
        "normalize.css",
        "validator",
        "codemirror",
        "faker",
        "ember-cli-code-coverage",
        "ember-cli-terser"
    ],
    "ignorePaths": [
        "test",
        "ghost/admin/lib/koenig-editor/package.json"
    ],
    "packageRules": [
        {
            "groupName": "ember-basic-dropdown addons",
            "matchPackageNames": [
                "/^ember-basic/",
                "/^ember-power/"
            ]
        },
        {
            "groupName": "ember core",
            "matchPackageNames": [
                "ember-source",
                "ember-cli",
                "ember-data"
            ]
        },
        {
            "groupName": "disable css",
            "matchFileNames": [
                "ghost/admin/package.json"
            ],
            "matchPackageNames": [
                "autoprefixer",
                "ember-cli-postcss",
                "/^postcss/",
                "/^css/"
            ],
            "enabled": false
        }
    ]
}
